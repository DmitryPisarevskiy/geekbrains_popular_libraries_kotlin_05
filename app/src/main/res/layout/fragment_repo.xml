<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.RepoFragment">

    <TextView
        android:id="@+id/tv_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="repo name"
        android:textColor="@color/black"
        android:textSize="@dimen/big_caption"
        />

    <TextView
        android:id="@+id/tv_repo_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/double_margin"
        android:layout_marginStart="@dimen/single_margin"
        android:text="@string/url"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/middle_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_repo_name" />

    <TextView
        android:id="@+id/tv_repo_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/single_margin"
        android:layout_marginStart="@dimen/single_margin"
        android:text="@string/language"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/middle_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_repo_url" />

    <TextView
        android:id="@+id/tv_repo_forks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/single_margin"
        android:layout_marginStart="@dimen/single_margin"
        android:text="@string/forks"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/middle_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_repo_language" />

    <TextView
        android:id="@+id/tv_repo_watchers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/single_margin"
        android:layout_marginStart="@dimen/single_margin"
        android:text="@string/watchers"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/middle_caption"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_repo_forks" />

    <TextView
        android:id="@+id/tv_repo_forks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_repo_forks"
        app:layout_constraintStart_toEndOf="@+id/tv_repo_language"
        android:layout_marginStart="@dimen/single_margin"
        tools:text="TextView"
        android:textSize="@dimen/middle_caption"/>

    <TextView
        android:id="@+id/tv_repu_language_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_repo_language"
        app:layout_constraintStart_toEndOf="@+id/tv_repo_language"
        android:layout_marginStart="@dimen/single_margin"
        tools:text="TextView"
        android:textSize="@dimen/middle_caption"/>

    <TextView
        android:id="@+id/tv_repo_watchers_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_repo_watchers"
        app:layout_constraintStart_toEndOf="@+id/tv_repo_language"
        android:layout_marginStart="@dimen/single_margin"
        tools:text="TextView"
        android:textSize="@dimen/middle_caption"/>

    <TextView
        android:id="@+id/tv_repo_url_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_repo_url"
        app:layout_constraintStart_toEndOf="@+id/tv_repo_language"
        android:layout_marginStart="@dimen/single_margin"
        tools:text="TextView"
        android:textSize="@dimen/middle_caption"/>

</androidx.constraintlayout.widget.ConstraintLayout>